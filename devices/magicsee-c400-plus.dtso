/dts-v1/;
/plugin/;

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/leds/common.h>

&{/} {

	i2c-display {
		compatible = "i2c-gpio";
		sda-gpios = <&gpio 66 0x10>;
		scl-gpios = <&gpio 65 0x10>;
		i2c-gpio,delay-us = <5>;
		#address-cells = <1>;
		#size-cells = <0>;

		display-controller@24 {
			compatible = "fdhisi,fd655";
			reg = <0x24>;

			tm16xx,digits = [01 02 03 04];
			tm16xx,segment-mapping = [03 01 02 06 04 05 00];

			#address-cells = <2>;
			#size-cells = <0>;
			
			led@0,0 {
				reg = <0 0>;
				function = LED_FUNCTION_BLUETOOTH;
			};
			
			led@0,1 {
				reg = <0 1>;
				function = LED_FUNCTION_LAN;
			};
			
			led@0,2 {
				reg = <0 2>;
				function = LED_FUNCTION_WLAN;
			};
			
			led@0,3 {
				reg = <0 3>;
				function = "spdif";
			};
			
			led@0,4 {
				reg = <0 4>;
				function = "colon";
			};
			
			led@0,5 {
				reg = <0 5>;
				function = "hdmi";
			};
			
			led@0,6 {
				reg = <0 6>;
				function = "video";
			};

		};
	};
};

